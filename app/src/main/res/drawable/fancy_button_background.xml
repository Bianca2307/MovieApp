<!-- res/drawable/fancy_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#8C34C1"
                android:centerColor="#9D32D1"
                android:endColor="#AC4FC6" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#8C34C1"
                android:centerColor="#9D32D1"
                android:endColor="#AC4FC6" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#AF5ED2"
                android:centerColor="#B64BEE"
                android:endColor="#C218F2" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
